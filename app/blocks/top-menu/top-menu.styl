.top-menu
	display flex
	color white
	background-color #26120c
	align-items center
	justify-content space-between
	min-height 10vh
	border-bottom: 1px solid #aaaaaa

	@media (max-width: 750px)
		flex-direction column
	.href
		margin-left 10px
		margin-top 10px
		font-size 16px
		text-decoration underline
		color white
		text-decoration-color rgba(255, 255, 255, .5)
		@media (max-width: 750px)
			margin-left 0px
		&:visited
			color white
		
.top-menu-brand
	font-family 'PT Serif', serif
.top-menu__left-wrapper
	padding 20px
	@media (max-width: 750px)
		padding-bottom 0px
.top-menu__right-wrapper
	padding 20px
	@media (max-width: 750px)
		padding-top 0px
		display flex
		flex-direction column
		align-items center

