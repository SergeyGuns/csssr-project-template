
h2
  font-size 1.3rem
  font-weight 600
  margin-top: 2rem
  margin-bottom: 1rem

ul
  padding-left: 1rem
  line-height: 1.7
#map
  height 300px

.bg-wrapper 
  background-color #26120c
.apartments-wrapper
  max-width 1200px
  margin auto
  display flex
  @media (max-width: 750px)
    flex-direction column
    .apartments-widget
      width 100%
.apartments-widget
  width 50%
  padding: 1rem
  color #fff
  background-color #26120c
  // &__title
  &__foto 
    background-color #000
    background-size contain
    background-repeat no-repeat
    background-position center
    &.--lindsay
      background-image url(/lindsay.jpg)
    &.--apartments
      background-image url(/apartments.jpg)
    img
      height 350px
      display none
    height 350px
    margin-top .5rem
    margin-bottom .5rem
  &__order-button-wrapper
    display flex
    justify-content end
  &__order-button 
    display inline-block
    background-color #583323
    padding 1rem
    color #fff
.href-social
  img 
    margin-right 10px
  display flex
  align-items center
  padding-bottom 10px

.serif
	font-family 'PT Serif', serif